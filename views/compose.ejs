<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="newPost" class="form-label">Title</label>
        <input type="text" name="postTitle" class="form-control" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="postContent" class="form-label">Post</label>
        <textarea name="postContent" class="form-control" cols="30" rows="80" autocomplete="off" spellcheck="off" style="width:200px; height: 50px;"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
